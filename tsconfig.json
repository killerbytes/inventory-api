{
    "compilerOptions": {
        "target": "ES2017",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "rootDir": "src",
        "outDir": "dist",
        "isolatedModules": true,
        "esModuleInterop": true,
        "allowJs": true
    },
    "include": [
        "src"
    ], // ⬅️ only src is compiled
    "exclude": [
        "node_modules",
        "dist",
        "src/config"
    ]
}